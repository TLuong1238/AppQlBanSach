<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="411dp"
        android:layout_height="77dp"
        android:layout_margin="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2196F3"
            android:gravity="center"
            android:text="CẬP NHẬT THÔNG TIN"
            android:textColor="#FEFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


    <EditText
        android:id="@+id/edtCusName"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edt_backgroumd"
        android:drawableStart="@drawable/blue_person"
        android:drawablePadding="10dp"
        android:elevation="20dp"

        android:inputType="text"
        android:padding="13dp"
        android:textColor="#131010"
        android:textColorHint="#0C0C0C"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5"
        app:layout_constraintWidth_percent=" .8"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtCusMail"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edt_backgroumd"
        android:drawableLeft="@drawable/blue_mail"
        android:drawablePadding="10dp"
        android:elevation="20dp"

        android:inputType="textEmailAddress"
        android:padding="13dp"
        android:textColor="#131010"
        android:textColorHint="#0C0C0C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCusName"
        app:layout_constraintWidth_percent=" .8"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtCusPhone"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edt_backgroumd"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="10dp"
        android:elevation="20dp"
        android:inputType="textPhonetic"
        android:padding="13dp"
        android:textColor="#131010"
        android:textColorHint="#0C0C0C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCusMail"
        app:layout_constraintWidth_percent=" .8"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtCusPass"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edt_backgroumd"
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="10dp"
        android:elevation="20dp"
        android:inputType="textPhonetic"
        android:padding="13dp"
        android:textColor="#131010"
        android:textColorHint="#0C0C0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCusPhone"
        app:layout_constraintWidth_percent=" .8"
        android:layout_marginBottom="5dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>